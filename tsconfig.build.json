{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declarationMap": false,
    "declaration": true,
    "stripInternal": true,
    "outDir": "./dist",
    "rootDirs": ["src", "packages"],
    "importHelpers": false,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "pretty": true,
    "removeComments": true,
    "checkJs": false,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "paths": {}
  },
  "include": ["./packages/**/src", "./packages/**/package.json", "./packages/**/src/**/*.json"],
  "exclude": ["*.test.js", "*.test.ts", "*.spec.ts"]
}
