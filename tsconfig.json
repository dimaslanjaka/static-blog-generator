{
  "extends": "./tsconfig.base.json",
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "transpileOnly": true,
    "require": [ "typescript-transform-paths/register" ],
  },
  "compilerOptions": {
    "outDir": "./tmp/dist",
    "types": ["nodejs-package-types"],
    "rootDirs": ["src", "packages"]
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": ["dist"]
}
