{
  "extends": "./tsconfig.base.json",
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "declarationMap": false,
    "composite": false,
    "incremental": true,
    "declaration": true,
    "stripInternal": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "./src",
    "./test"
  ],
  "exclude": [
    "dist"
  ]
}