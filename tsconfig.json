{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDirs": [
      "./",
      "./packages"
    ],
    "sourceRoot": "./",
    "rootDir": "./",
    "allowJs": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/node_modules/**",
    "**/tests/**"
  ],
  "include": [
    "./src/**/*",
    "./build.ts",
    "./gulpfile.ts",
    "./packages/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "moduleResolution": "Node",
    }
  }
}