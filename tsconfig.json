{
  "extends": "./tsconfig.base.json",
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "transpileOnly": true,
    "require": ["typescript-transform-paths/register"]
  },
  "compilerOptions": {
    "outDir": "./tmp/dist",
    "types": ["nodejs-package-types"],
    "rootDirs": ["src", "packages"],
    "allowJs": true,
    "checkJs": false
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["./packages/**/*", "./packages/sbg-*/*.json", "*.js", "gulpfile.ts"],
  "exclude": ["**/dist/**", "**/node_modules/**", "**/tmp/**"]
}
