{
  "name": "static-blog-generator-root",
  "version": "3.0.0",
  "description": "Pre-processing of all source posts/articles before rendering using hexo. Useful for low-end devices to avoid memory heap errors. With this package you can prevent using a large number of hexo plugins, because some functions (runners) are separated by task, so they are memory friendly.",
  "private": true,
  "files": [
    "packages/sbg-*/dist/**/*",
    "packages/sbg-*/package.json",
    "LICENSE",
    "*.json",
    "!dist/**/*",
    "!**/node_modules/**",
    "!packages/**/node_modules/**",
    "!**/tmp/**",
    "!packages/**/tmp/**",
    "!test",
    "!**/test/**",
    "!**/src/**"
  ],
  "scripts": {
    "update:submodules": "npx lerna exec \"npx npm-check-updates -u -x chalk,codemirror,highlight.js,hexo\" --concurrency=1",
    "update:ncu": "npx npm-check-updates -u -x chalk,codemirror,highlight.js,hexo",
    "update": "run-s update:**",
    "build": "npx lerna run build --concurrency=1",
    "docs": "node docs.js",
    "lint": "npx lerna run lint --concurrency=1",
    "test": "npx jest --coverage --runInBand --detectOpenHandles",
    "test-serve": "node jest.serve.js",
    "prepare": "npx husky install",
    "clean": "npx lerna run clean --concurrency=1",
    "pack": "npx lerna run pack --concurrency=1"
  },
  "author": "Dimas Lanjaka <dimaslanjaka@gmail.com> (https://webmanajemen.com)",
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@jest/globals": "^29.4.1",
    "@types/gulp": "^4.0.10",
    "@types/hexo": "https://github.com/dimaslanjaka/nodejs-package-types/tarball/hexo",
    "@types/hexo-util": "https://github.com/dimaslanjaka/nodejs-package-types/raw/main/hexo-util/release/types-hexo-util.tgz",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@types/through2": "https://github.com/dimaslanjaka/nodejs-package-types/tarball/through2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "babel-jest": "^29.4.1",
    "depcheck": "^1.4.3",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gulp": "^4.0.2",
    "jest": "^29.4.1",
    "jest-config": "^29.4.1",
    "jest-html-reporters": "^3.1.1",
    "lerna": "^6.4.1",
    "nodejs-package-types": "https://github.com/dimaslanjaka/nodejs-package-types/raw/main/release/nodejs-package-types.tgz",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "typescript-transform-paths": "^3.4.6"
  },
  "workspaces": {
    "packages": [
      "packages/sbg-utility",
      "packages/sbg-api",
      "packages/sbg-server",
      "packages/sbg-cli",
      "packages/safelinkify",
      "packages/hexo-post-parser",
      "packages/git-command-helper",
      "packages/google-news-sitemap",
      "packages/hexo-blogger-xml",
      "packages/static-blog-generator"
    ]
  },
  "packageManager": "yarn@3.2.0",
  "engines": {
    "node": ">=14",
    "yarn": "3.2.0"
  },
  "installConfig": {
    "hoistingLimits": "none",
    "selfReferences": true
  },
  "peerDependenciesMeta": {
    "markdown-it-anchor": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  }
}
