{
  "name": "static-blog-generator-root",
  "version": "3.0.1",
  "description": "Pre-processing of all source posts/articles before rendering using hexo. Useful for low-end devices to avoid memory heap errors. With this package you can prevent using a large number of hexo plugins, because some functions (runners) are separated by task, so they are memory friendly.",
  "private": true,
  "files": [
    "packages/sbg-*/dist/**/*",
    "packages/sbg-*/package.json",
    "LICENSE",
    "*.json",
    "!dist/**/*",
    "!**/node_modules/**",
    "!packages/**/node_modules/**",
    "!**/tmp/**",
    "!packages/**/tmp/**",
    "!test",
    "!**/test/**",
    "!**/src/**"
  ],
  "scripts": {
    "update:submodules": "lerna run update:ncu --no-bail --concurrency=1",
    "update:ncu": "npm-check-updates -u -x chalk,codemirror,highlight.js,hexo",
    "update": "run-s update:**",
    "build": "lerna run build --concurrency=1",
    "docs": "node docs.js",
    "lint": "lerna run lint --concurrency=1",
    "test": "jest --coverage --runInBand --detectOpenHandles",
    "test-serve": "node jest.serve.js",
    "clean": "lerna clean",
    "pack": "lerna exec \"npm run pack --if-present\""
  },
  "author": "Dimas Lanjaka <dimaslanjaka@gmail.com> (https://webmanajemen.com)",
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@jest/globals": "^29.5.0",
    "@types/gulp": "^4.0.10",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/through2": "https://github.com/dimaslanjaka/nodejs-package-types/tarball/through2",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "babel-jest": "^29.5.0",
    "binary-collections": "https://github.com/dimaslanjaka/bin",
    "depcheck": "^1.4.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gulp": "^4.0.2",
    "jest": "^29.5.0",
    "jest-config": "^29.5.0",
    "jest-html-reporters": "^3.1.4",
    "jsonc-parser": "^3.2.0",
    "nodejs-package-types": "https://github.com/dimaslanjaka/nodejs-package-types/raw/main/release/nodejs-package-types.tgz",
    "nodemon": "^2.0.22",
    "npm-check-updates": "^16.10.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "typescript-transform-paths": "^3.4.6"
  },
  "workspaces": {
    "packages": [
      "packages/sbg-utility",
      "packages/sbg-api",
      "packages/sbg-server",
      "packages/sbg-cli",
      "packages/safelinkify",
      "packages/hexo-post-parser",
      "packages/git-command-helper",
      "packages/google-news-sitemap",
      "packages/hexo-blogger-xml",
      "packages/static-blog-generator",
      "packages/instant-indexing",
      "test"
    ]
  },
  "packageManager": "yarn@3.5.0",
  "engines": {
    "node": ">=14",
    "yarn": "3.2.0"
  },
  "peerDependenciesMeta": {
    "markdown-it-anchor": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "resolutions": {
    "hexo-renderers": "https://github.com/dimaslanjaka/hexo-renderers/raw/master/release/hexo-renderers.tgz",
    "hexo-shortcodes": "https://github.com/dimaslanjaka/hexo-shortcodes/raw/pre-release/release/hexo-shortcodes.tgz"
  }
}
