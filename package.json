{
  "name": "static-blog-generator",
  "version": "3.0.0",
  "description": "Pre-processing all source posts before rendering from hexo. Useful for low-end devices to prevent using large number of hexo plugins.",
  "main": "packages/sbg-main/dist/index.js",
  "types": "packages/sbg-main/dist/index.d.ts",
  "bin": {
    "sbg": "packages/sbg-main/dist/cli.js"
  },
  "files": [
    "packages/sbg-*/dist/**/*",
    "packages/sbg-*/package.json",
    "LICENSE",
    "*.json",
    "!dist/**/*",
    "!**/node_modules/**",
    "!packages/**/node_modules/**",
    "!**/tmp/**",
    "!packages/**/tmp/**",
    "!test",
    "!**/test/**",
    "!**/src/**"
  ],
  "keywords": [
    "gulp",
    "blog",
    "static-site-generator",
    "hexo",
    "static-site",
    "blog-nodejs",
    "hexo-admin",
    "hexo-seo",
    "hexo-gui",
    "gulp-blog"
  ],
  "scripts": {
    "update:postinstall": "curl -L https://github.com/dimaslanjaka/nodejs-package-types/raw/main/postinstall.js > postinstall.js",
    "update:packer": "curl -L https://github.com/dimaslanjaka/nodejs-package-types/raw/main/packer.js > packer.js",
    "update:ncu": "npx npm-check-updates -u -x chalk",
    "update": "run-s update:**",
    "postupdate": "node postinstall.js && npm run update --workspaces",
    "build": "npx lerna run build && npx gulp",
    "docs": "node docs.js",
    "lint": "npm run lint --workspaces",
    "test": "npx jest --coverage --runInBand --detectOpenHandles",
    "test-serve": "node jest.serve.js",
    "prepare": "npx husky install",
    "clean": "gulp clean && npm run clean --workspaces",
    "pack": "node packer.js && npm run pack --workspaces"
  },
  "author": "Dimas Lanjaka <dimaslanjaka@gmail.com> (https://webmanajemen.com)",
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@jest/globals": "^29.3.1",
    "@types/bluebird": "^3.5.38",
    "@types/fs-extra": "^11.0.1",
    "@types/gulp": "^4.0.10",
    "@types/hexo": "https://github.com/dimaslanjaka/nodejs-package-types/tarball/hexo",
    "@types/hexo-util": "https://github.com/dimaslanjaka/nodejs-package-types/raw/main/hexo-util/release/types-hexo-util.tgz",
    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "@types/through2": "https://github.com/dimaslanjaka/nodejs-package-types/tarball/through2",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "axios": "^1.2.3",
    "axios-cache-interceptor": "^1.0.0",
    "babel-jest": "^29.3.1",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "depcheck": "^1.4.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-command-helper": "^1.1.5",
    "gulp": "^4.0.2",
    "hpagent": "^1.2.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-config": "^29.3.1",
    "jest-html-reporters": "^3.0.11",
    "lerna": "^6.4.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "nx": "^15.5.3",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.1",
    "semver": "^7.3.8",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.24",
    "typedoc-plugin-missing-exports": "^1.0.0",
    "typescript": "^4.9.4",
    "typescript-transform-paths": "^3.4.6"
  }
}
