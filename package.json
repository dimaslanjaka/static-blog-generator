{
  "name": "static-blog-generator-hexo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prestart": "npm run copy",
    "start": "npm run server",
    "prebuild": "npm run copy",
    "build": "hexo generate",
    "postbuild": "gulp sitemap && gulp feed && gulp copy && gulp safelink",
    "copy": "gulp copy-all-post",
    "clean": "gulp clean",
    "deploy": "npm run build && gulp deploy",
    "server": "hexo server -p 4000",
    "server-php": "php -S localhost:4000 -t public",
    "postinstall": "node bin/update-cache.js",
    "update": "npx npm-check-updates -u -x hexo,chalk && npm install --cache tmp/npm",
    "refresh": "npm update hexo-front-matter hexo-browsersync hexo-generator-redirect static-blog-generator safelinkify hexo-post-parser"
  },
  "hexo": {
    "version": "6.3.0"
  },
  "dependencies": {
    "hexo": "^6.2.0",
    "hexo-asset-link": "^2.2.1",
    "hexo-browsersync": "git+https://github.com/hexojs/hexo-browsersync",
    "hexo-extend-injector2": "^0.3.1",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-i18n": "^0.0.10",
    "hexo-generator-index": "^3.0.0",
    "hexo-generator-json-content": "^4.2.3",
    "hexo-generator-redirect": "file:packages/hexo-generator-redirect",
    "hexo-generator-searchdb": "^1.4.1",
    "hexo-generator-sitemap": "^3.0.1",
    "hexo-generator-tag": "^2.0.0",
    "hexo-github-card": "file:packages/hexo-github-card",
    "hexo-i18n": "^2.0.0",
    "hexo-pagination": "^3.0.0",
    "hexo-pdf": "^1.1.1",
    "hexo-renderer-marked": "^6.0.0",
    "hexo-renderer-stylus": "^2.1.0",
    "hexo-server": "^3.0.0",
    "hexo-theme-next": "file:themes/next"
  },
  "devDependencies": {
    "@types/hexo": "file:packages/@types/hexo",
    "@types/hexo-util": "file:packages/@types/hexo-util",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "chimeraland": "file:multisite/chimeraland",
    "cross-env": "^7.0.3",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-describe": "^4.1.1",
    "gulp": "^4.0.2",
    "gulp-dom": "file:packages/gulp-dom",
    "gulp-sbg": "file:packages/gulp-sbg",
    "hexo-post-parser": "file:../hexo-post-parser",
    "md5-file": "^5.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sitemap-crawler": "file:packages/sitemap-crawler",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
