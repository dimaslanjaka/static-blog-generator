{
  // "extends": "../../tsconfig.base.json",
  "extends": "./tsconfig.base.json",
  "ts-node": {
    "transpileOnly": true,
    "emit": false,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "downlevelIteration": true,
    "baseUrl": "./",
    //"paths": { "src": ["./src"], "test": ["./test"] },
    "outDir": "./dist",
    //"tsBuildInfoFile": "./tmp/tsconfig.tsbuildinfo",
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./src/**/*.json", "./test/**/*"]
  //"references": [{ "path": "../hexo-post-parser" }, { "path": "../git-command-helper" }]
}
