{
  "extends": "./tsconfig.base.json",
  "ts-node": {
    "transpileOnly": true,
    "emit": false,
    "compilerOptions": {
      "module": "Node16"
    }
  },
  "compilerOptions": {
    "module": "Node16",
    "target": "es5",
    "downlevelIteration": true,
    "baseUrl": "./",
    "outDir": "./tmp/dist",
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "./src/**/*.json",
    "./test/**/*"
  ]
}