{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"target": "ES2015",
		"skipDefaultLibCheck": true,
		"strict": false,
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": false,
		"resolveJsonModule": true,
		"moduleResolution": "Node16"
	},
	"include": ["./src/index.ts", "./src/index-browser.ts"],
	"exclude": [
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.runner.ts",
		"**/*.test.js",
		"**/*.spec.js",
		"**/*.runner.js",
		"**/*.builder.*",
		"./test"
	]
}
