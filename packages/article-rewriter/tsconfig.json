{
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "ESNext",
    "moduleResolution": "node"
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}