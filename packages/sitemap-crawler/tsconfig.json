{
  "compilerOptions": {
    "lib": [
      "ES2017",
      "ES2019",
      "DOM"
    ],
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}