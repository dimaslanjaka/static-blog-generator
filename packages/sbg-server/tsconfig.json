{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "baseUrl": "./",
    "lib": ["ES2020", "DOM", "ES6", "ES2021", "ES2021.String"],
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "paths": { "sbg-*": ["../packages/sbg-*"], "src": ["./src"] },
    "types": ["node"]
  },
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": ["./src/public/**/*"],
  "references": [{ "path": "../sbg-utility" }, { "path": "../sbg-api" }]
}
