  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "baseUrl": "./",
    "lib": ["ES2020", "DOM", "ES6", "ES2021", "ES2021.String"],
    "allowJs": true,
    "checkJs": false,
    // "paths": { "sbg-*": ["../sbg-*/src"], "src": ["./src"], "test": ["./test"] },
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.build.tsbuildinfo"
  },
  "include": ["./src/**/*", "./src/**/*.json", "./*.js"],
  "exclude": ["./src/public/**/*"],
  "references": [{ "path": "../sbg-utility" }, { "path": "../sbg-api" }]
}
