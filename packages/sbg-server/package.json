{
  "name": "sbg-server",
  "version": "1.0.0",
  "description": "static-blog-generator server workspace",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "update:postinstall": "curl -L https://github.com/dimaslanjaka/nodejs-package-types/raw/main/postinstall.js > postinstall.js",
    "update:packer": "curl -L https://github.com/dimaslanjaka/nodejs-package-types/raw/main/packer.js > packer.js",
    "update": "run-s update:** && npx npm-check-updates -u -x chalk,codemirror && npm install && node postinstall.js",
    "test": "jest --runInBand",
    "dev:server": "ts-node src/server.runner.ts",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "build": "npm run terser && npm run tw && npm run purge && npx gulp build",
    "terser": "npx gulp compile:js",
    "tw": "npx gulp compile:tailwind",
    "purge": "purgecss -c purgecss.config.js -o ./src/public/css",
    "clean": "rm -rf dist tmp src/public",
    "pack": "node packer.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimaslanjaka/static-blog-generator.git"
  },
  "keywords": [
    "static-blog-generator",
    "express",
    "server"
  ],
  "author": "Dimas Lanjaka <dimaslanjaka@gmail.com> (https://www.webmanajemen.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dimaslanjaka/static-blog-generator/issues"
  },
  "homepage": "https://github.com/dimaslanjaka/static-blog-generator#readme",
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "ansi-colors": "^4.1.3",
    "axios": "^1.3.1",
    "bluebird": "^3.7.2",
    "codemirror": "5.65.11",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.27.2",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "flowbite": "^1.6.3",
    "fs-extra": "^11.1.0",
    "glob": "^8.1.0",
    "highlight.js": "11.7.0",
    "markdown-it": "^13.0.1",
    "moment-timezone": "^0.5.40",
    "nunjucks": "^3.2.3",
    "safelinkify": "^1.1.12",
    "sbg-api": "^1.0.0",
    "sbg-utility": "^1.0.0",
    "serve-favicon": "^2.5.0",
    "serve-index": "^1.9.1",
    "upath": "^2.0.1",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@jest/globals": "^29.4.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.16",
    "@types/node": "^18.11.18",
    "@types/serve-index": "^1.9.1",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "autoprefixer": "^10.4.13",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "cross-spawn": "https://github.com/dimaslanjaka/node-cross-spawn/tarball/private",
    "eslint": "^8.33.0",
    "eslint-config-plugin": "^1.0.11",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-command-helper": "^1.1.6",
    "gulp": "^4.0.2",
    "jest": "^29.4.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^11.1.0",
    "postcss-preset-env": "^8.0.1",
    "prettier": "^2.8.3",
    "purgecss": "^5.0.0",
    "sharp": "^0.31.3",
    "tailwindcss": "^3.2.4",
    "through2": "^4.0.2",
    "tree-kill": "^1.2.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
