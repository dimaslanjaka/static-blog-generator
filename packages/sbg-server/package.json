{
  "name": "sbg-server",
  "version": "1.0.5",
  "description": "static-blog-generator server workspace",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "update:postinstall": "curl -L https://github.com/dimaslanjaka/nodejs-package-types/raw/main/postinstall.js > postinstall.js",
    "update:packer": "curl -L https://github.com/dimaslanjaka/nodejs-package-types/raw/main/packer.js > packer.js",
    "update:ncu": "npm-check-updates -u -x chalk,codemirror",
    "update": "run-s update:**",
    "test": "jest --runInBand",
    "server:dev": "node server-dev.runner.js",
    "server:dist": "node server-dist.runner.js",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "build": "yarn js && yarn compile && yarn tw && yarn purge && gulp tsc copy --series",
    "compile": "gulp compile:images compile:css --series",
    "js": "rollup -c",
    "tw": "gulp compile:tailwind",
    "purge": "purgecss -c purgecss.config.js -o ./src/public/css",
    "clean": "rm -rf dist tmp src/public",
    "pack": "node packer.js --yarn"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimaslanjaka/static-blog-generator.git"
  },
  "keywords": [
    "static-blog-generator",
    "express",
    "server"
  ],
  "author": "Dimas Lanjaka <dimaslanjaka@gmail.com> (https://www.webmanajemen.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dimaslanjaka/static-blog-generator/issues"
  },
  "homepage": "https://github.com/dimaslanjaka/static-blog-generator#readme",
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "ansi-colors": "^4.1.3",
    "axios": "^1.3.3",
    "bluebird": "^3.7.2",
    "codemirror": "5.65.12",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.28.0",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "find-yarn-workspace-root": "^2.0.0",
    "flowbite": "^1.6.3",
    "fs-extra": "^11.1.0",
    "git-command-helper": "workspace:^",
    "glob": "^8.1.0",
    "highlight.js": "11.7.0",
    "instant-indexing": "workspace:^",
    "markdown-it": "^13.0.1",
    "moment-timezone": "^0.5.40",
    "nunjucks": "^3.2.3",
    "safelinkify": "workspace:^",
    "sbg-api": "workspace:^",
    "sbg-utility": "workspace:^",
    "serve-index": "^1.9.1",
    "upath": "^2.0.1",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@jest/globals": "^29.4.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-multi-entry": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.0",
    "@types/serve-index": "^1.9.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "autoprefixer": "^10.4.13",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "cross-spawn": "https://github.com/dimaslanjaka/node-cross-spawn/tarball/private",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-config-plugin": "^1.0.11",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gulp": "^4.0.2",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^11.2.1",
    "postcss-preset-env": "^8.0.1",
    "prettier": "^2.8.4",
    "purgecss": "^5.0.0",
    "rollup": "^3.17.2",
    "sharp": "^0.31.3",
    "tailwindcss": "^3.2.7",
    "through2": "^4.0.2",
    "tree-kill": "^1.2.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
