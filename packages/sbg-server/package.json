{
  "name": "sbg-server",
  "version": "0.0.1",
  "description": "static-blog-generator server workspace",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "update:postinstall": "curl -L https://github.com/dimaslanjaka/nodejs-package-types/raw/main/postinstall.js > postinstall.js",
    "update": "npm run update:postinstall && npx npm-check-updates -u && npm install && node postinstall.js",
    "test": "jest --runInBand",
    "dev:server": "ts-node src/server.runner.ts",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "build": "npm run terser && npm run tw && npm run purge && gulp build",
    "terser": "gulp compile:js",
    "tw": "tailwind -c tailwind.config.js -i source/styles/app.css -o ./src/public/css/app.css",
    "purge": "purgecss -c purgecss.config.js -o ./src/public/css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimaslanjaka/static-blog-generator.git"
  },
  "keywords": [
    "static-blog-generator",
    "express",
    "server"
  ],
  "author": "Dimas Lanjaka <dimaslanjaka@gmail.com> (https://www.webmanajemen.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dimaslanjaka/static-blog-generator/issues"
  },
  "homepage": "https://github.com/dimaslanjaka/static-blog-generator#readme",
  "dependencies": {
    "axios": "^1.2.2",
    "codemirror": "https://github.com/codemirror/codemirror5/tarball/master",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.27.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "flowbite": "^1.6.2",
    "front-matter": "^4.0.2",
    "fs-extra": "^11.1.0",
    "glob": "^8.0.3",
    "highlight.js": "https://github.com/highlightjs/highlight.js/tarball/11-stable",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.1",
    "nunjucks": "^3.2.3",
    "sbg-api": "file:../sbg-api",
    "sbg-utility": "file:../sbg-utility",
    "serve-index": "^1.9.1",
    "upath": "^2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/standalone": "^7.20.12",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.15",
    "@types/serve-index": "^1.9.1",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.2",
    "cross-env": "^7.0.3",
    "cross-spawn": "https://github.com/dimaslanjaka/node-cross-spawn/tarball/typescript",
    "debug": "^4.3.4",
    "eslint": "^8.31.0",
    "mini-css-extract-plugin": "^2.7.2",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^10.2.0",
    "prettier": "^2.8.2",
    "purgecss": "^5.0.0",
    "tailwindcss": "^3.2.4",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
