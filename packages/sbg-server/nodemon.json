{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "node nodemon.runner.js",
  "watch": [
    "./src/**/*.ts",
    "./tsconfig.json",
    "./package.json"
  ],
  "ignore": [
    "*.test.js",
    ".vscode",
    ".gitignore",
    "gh-pages",
    "dist",
    "tests",
    "tmp",
    "temp",
    "./src/tmp",
    "docs",
    "release",
    "./src/public"
  ],
  "delay": 3000,
  "ext": "*",
  "verbose": false
}