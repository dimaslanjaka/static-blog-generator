{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "npm run build && npm run dev:server",
  "watch": ["./src/**/*.{ts,njk}", "./tsconfig.json", "./package.json"],
  "ignore": [
    "*.test.js",
    ".vscode",
    ".gitignore",
    "gh-pages",
    "dist",
    "tests",
    "tmp",
    "temp",
    "./src/tmp",
    "docs",
    "release",
    "./src/public"
  ],
  "delay": 3000,
  "verbose": false
}