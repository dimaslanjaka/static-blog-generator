{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "npm run dev:server",
  "watch": ["./src/**/*.ts", "./tsconfig.json", "./package.json"],
  "ignore": [
    "*.test.js",
    ".vscode",
    ".gitignore",
    "gh-pages",
    "dist",
    "tests",
    "tmp",
    "temp",
    "./src/tmp",
    "docs",
    "release"
  ],
  "delay": 3000,
  "ext": "ts,js",
  "verbose": true
}