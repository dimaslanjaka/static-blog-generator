{
  "files.autoSave": "onWindowChange",
  "files.exclude": {
    //"**/.cache": false,
    "**/node_modules": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true,
    "source.fixAll.stylelint": true
  },
  "editor.formatOnSave": false,
  "[json]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    }
  },
  "[css]": {
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.formatOnSave": true
  },
  "prettier.endOfLine": "lf",
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "code-runner.clearPreviousOutput": true,
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "typescript": "node -r ts-node/register -r dotenv/config",
    "typescriptreact": "node -r ts-node/register -r dotenv/config",
    "javascript": "node -r dotenv/config"
  },
  "code-runner.respectShebang": true,
  //"code-runner.terminalRoot": "/mnt/",
  //"code-runner.cwd": "D:/Repositories/static-blog-generator-hexo/packages/instant-indexing",
  "html.autoClosingTags": true,
  //"typescript.tsdk": "node_modules\\typescript\\lib",
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "xml",
    "php",
    "typescriptreact",
    "javascriptreact",
    "javascript",
    "typescript"
  ],
  "eslint.run": "onSave",
  "eslint.useESLintClass": true,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": ["${env:windir}\\Sysnative\\cmd.exe", "${env:windir}\\System32\\cmd.exe"],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Cygwin": {
      "path": "C:\\cygwin64\\bin\\bash.exe",
      "args": ["--login"],
      "env": {
        "CHERE_INVOKING": "1"
      }
    }
  },
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "npm.packageManager": "npm",
  "git.enabled": false
}
